<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://bootswatch.com/4/pulse/bootstrap.min.css">
    <title>login</title>
</head>

<body>
<center>
    <h3><b>NL_Technologie</b></h3>
    {% if app.user %}
        <script>window.location.href = "/"</script>
    {% endif %}
    {% if error %}
        {#{{ error.messageKey | trans(error.messagedata, 'security') }}#}
        <p>Pseudo ou mot de passe incorrect</p>
    {% endif %}
    <form action="" method="post">
        <table>
            <tr>
                <td><label for="username">Pseudo:</label></td>
                <td><input type="text" name="_username" value="{{ last_username }}" placeholder="Votre Pseudo..."></td>
            </tr><br>
            <tr>
                <td><label for="password">Mots de passe:</label></td>
                <td><input type="password" name="_password" placeholder="Votre mots de passe...."></td>
            </tr>
        </table>
        <button type="submit">Connexion</button>
    </form>
</center>
</body>
</html>